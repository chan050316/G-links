include ../partials/head
    title settings
header 
    a.logo(href='/') G-links
main.settings
    h1.settings__title #{nickname}님, 환영합니다
    if links[0]
        .box
            h2.box__name #{nickname}님께서 업로드한 링크
            .box__items
                each link in links
                    .box__item
                        h2.box__item__title #{link.title}
                        a.box__item__link(href=link.link, target="_blank")
                            i.fas.fa-play-circle.play_button
                        .box__item__icon
                            .box__item__delete(value=link._id)
                                svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512") 
                                    path(d="M160 400C160 408.8 152.8 416 144 416C135.2 416 128 408.8 128 400V192C128 183.2 135.2 176 144 176C152.8 176 160 183.2 160 192V400zM240 400C240 408.8 232.8 416 224 416C215.2 416 208 408.8 208 400V192C208 183.2 215.2 176 224 176C232.8 176 240 183.2 240 192V400zM320 400C320 408.8 312.8 416 304 416C295.2 416 288 408.8 288 400V192C288 183.2 295.2 176 304 176C312.8 176 320 183.2 320 192V400zM317.5 24.94L354.2 80H424C437.3 80 448 90.75 448 104C448 117.3 437.3 128 424 128H416V432C416 476.2 380.2 512 336 512H112C67.82 512 32 476.2 32 432V128H24C10.75 128 0 117.3 0 104C0 90.75 10.75 80 24 80H93.82L130.5 24.94C140.9 9.357 158.4 0 177.1 0H270.9C289.6 0 307.1 9.358 317.5 24.94H317.5zM151.5 80H296.5L277.5 51.56C276 49.34 273.5 48 270.9 48H177.1C174.5 48 171.1 49.34 170.5 51.56L151.5 80zM80 432C80 449.7 94.33 464 112 464H336C353.7 464 368 449.7 368 432V128H80V432z")
                            i.far.fa-copy.copy_button(val=link.link)
    .box
        h2.box__name #{nickname}님의 회원정보
        span.box__description *바꾸고 싶은 정보만 바꾸어 수정 버튼 눌러주세요!
        form.box__user-info(action="/users/me" method="post")
            .box__user-info__section 
                label.box__section__label(for="nickname") 닉네임
                input.box__section__contents__input(placeholder = nickname type="text", id="nickname", name="nickname" required)

            .box__user-info__section 
                label.box__section__label(for="email") 이메일
                input.box__section__contents__input(placeholder = email type="email", id="email", name="email" required)

            .box__user-info__section
                label.box__section__label(for="password") 비밀번호
                input.box__section__contents__input(placeholder = "********" type="password", id="password", name="password" required)
            input(type="hidden" name="_method" value="patch")
            input.box__user-info__submit(type="submit" value="수정")

    .button__box
        form.settings-button(action="/users/me" method="post") 
            input(type="hidden" name="_method" value="delete")
            input.setting-button__exit(type="submit", value="회원 탈퇴")

        form.settings-button(action="/users/logout" method="post") 
            input.setting-button__logout(type="submit", value="로그아웃")

        form.settings-button(action="/users/logoutAll" method="post") 
            input.setting-button__logout-all(type="submit", value="모든 기기에서 로그아웃")
            





